{
	"compilerOptions": {
		"module": "es2022",
		"target": "es2022",
		"lib": ["es2022"],
		"jsx": "react",
		"moduleResolution": "node",
		"paths": { "@src/*": ["./src/*"], "@dist/*": ["./dist/*"] },
		"types": ["@cloudflare/workers-types", "vitest-environment-miniflare/globals"],
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"useUnknownInCatchVariables": true,
		"skipLibCheck": true
	},
	"include": ["test/**/*.ts"],
	"exclude": ["dist", "node_modules", "**/node_modules", "build.mts", "src"]
}
